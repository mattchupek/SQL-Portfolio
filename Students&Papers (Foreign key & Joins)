CREATE TABLE students (
    id INT AUTO_INCREMENT PRIMARY KEY,
    first_name VARCHAR(100),
    last_name VARCHAR(100)
);

CREATE TABLE papers (
    title VARCHAR(100),
    grade INT,
    students_ID INT,
    FOREIGN KEY (students_ID) REFERENCES students(id)
);

INSERT INTO students (first_name, last_name) VALUES 
('Caleb', 'Smith'),
('Samantha', 'Jones'),
('Raj', 'Patel'),
('Carlos', 'Garcia'),
('Lisa', 'Johnson');

INSERT INTO papers (students_ID, title, grade) VALUES
(1, 'My First Book Report', 60),
(1, 'My Second Book Report', 75),
(2, 'Russian Lit Through The Ages', 94),
(2, 'De Montaigne and The Art of The Essay', 98),
(4, 'Borges and Magical Realism', 89);

-- Show only students who have completed their titles/grades, ordered by grade descending
SELECT s.first_name, p.title, p.grade
FROM students s
LEFT JOIN papers p ON s.id = p.students_ID
WHERE p.title IS NOT NULL AND p.grade IS NOT NULL
ORDER BY p.grade DESC;

-- Show every student's name even if they have not completed their titles/grades
SELECT s.first_name, IFNULL(p.title, 'MISSING') AS title, IFNULL(p.grade, 0) AS grade
FROM students s
LEFT JOIN papers p ON s.id = p.students_ID;

-- Get the average grade for every student
SELECT s.first_name, AVG(p.grade) AS avg_grade
FROM students s
LEFT JOIN papers p ON s.id = p.students_ID
GROUP BY s.id;
